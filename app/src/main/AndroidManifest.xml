<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.allfree.conotan_bootstrap">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Bootstrap"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendActivity"
            android:label="@string/title_activity_send"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinishedSendingActivity"
            android:label="@string/title_activity_finished_sending" />
        <activity
            android:name=".HelpDetailActivity"
            android:label="@string/title_activity_help_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RememberActivity" />
        <activity
            android:name=".SelectImageActivity"
            android:label="@string/title_activity_select_image" />
        <activity
            android:name=".ManualListActivity"
            android:label="@string/title_activity_manual_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowManualActivity"
            android:label="@string/title_activity_show_manual"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinishAnswering"
            android:label="@string/title_activity_finish_answering" />

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ConotanNoticeActivity"
            android:label="@string/title_activity_conotan_notice"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManualImageActivity"
            android:label="@string/title_activity_manual_image"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>