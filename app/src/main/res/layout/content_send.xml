<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.allfree.conotan_bootstrap.SendActivity"
    tools:showIn="@layout/activity_send">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/sending"
        android:id="@+id/linearLayout2"
        android:weightSum="1">


        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"-->
            <!--android:inputType="textMultiLine"-->
            <!--android:ems="10"-->
            <!--android:id="@+id/editText"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_above="@+id/send"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_marginTop="50dp"-->
            <!--android:textSize="30dp"-->
            <!--android:background="@drawable/send_border" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="質問を送る"
            android:id="@+id/title"
            android:textColor="@color/textColor"
            android:textSize="70sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/send_text"
            app:bootstrapSize="lg"
            app:bootstrapBrand="warning"
            android:layout_gravity="center_horizontal" />


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/send"
            app:bootstrapBrand="warning"
            app:bootstrapText="送る {fa-paper-plane-o}"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:gravity="center_horizontal"
            android:layout_marginBottom="115dp"
            android:layout_alignBottom="@+id/linearLayout2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>

</RelativeLayout>
