<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.allfree.conotan_bootstrap.HelpDetailActivity"
    tools:showIn="@layout/activity_help_detail">



    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_maemoittayo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="前も言ったよ"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom ="50dp" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_wakaranai"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="わからない"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"

        android:layout_alignBottom="@+id/button_maemoittayo"
        android:layout_marginBottom="50dp"


        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_ok"
        android:layout_width = "200dp"
        android:layout_height="wrap_content"
        android:text="OK!!"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/button_wakaranai"
        android:layout_marginBottom="50dp" />


    xmlns:tools="http://schemas.android.com/tools"
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/linetalk"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/button_ok"
        android:layout_marginBottom="50dp" />


</RelativeLayout>
