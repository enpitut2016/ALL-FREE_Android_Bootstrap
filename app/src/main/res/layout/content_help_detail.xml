<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.allfree.conotan_bootstrap.HelpDetailActivity"
    tools:showIn="@layout/activity_help_detail">



    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_maemoittayo"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:text="この前も言った"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom ="50dp" />


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_wakaranai"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:text="これはわからない"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"

        android:layout_alignBottom="@+id/button_maemoittayo"
        android:layout_marginBottom="100dp"


        android:layout_centerHorizontal="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/button_ok"
        android:layout_width = "450dp"
        android:layout_height="85dp"
        android:text="マニュアル作成"
        app:bootstrapBrand="warning"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/button_wakaranai"
        android:layout_marginBottom="100dp" />


    xmlns:tools="http://schemas.android.com/tools"
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    android:background="#000000"
    tools:context=".MainActivity">


    <View
        android:id="@+id/center_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:src="@drawable/linetalk"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/button_ok"
        android:layout_marginBottom="100dp"
        android:id="@+id/imageView"
        android:layout_alignLeft="@+id/center_view"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="New Text"
        android:id="@+id/helptext"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/button_ok"
        android:layout_marginBottom="100dp"
        android:layout_alignRight="@+id/center_view"/>


</RelativeLayout>
