<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.allfree.conotan_bootstrap.HelpDetailActivity"
    tools:showIn="@layout/activity_help_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/sending"
        android:id="@+id/linearLayout2"
        android:weightSum="1">


        <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:id="@+id/linearLayout_horizontal"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="500dp"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:gravity="center_horizontal">-->

            <!--<ImageView-->
                <!--android:src="@drawable/linetalk"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/imageView" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="質問内容"
                android:id="@+id/title"
                android:textColor="@color/textColor"
                android:textSize="70sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="New Text"
                android:maxLines="4"
                android:background="#ffffcc"
                android:id="@+id/helptext" />

        <!--</LinearLayout>-->

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/button_ok"
            android:layout_width = "wrap_content"
            android:layout_height="wrap_content"
            android:text="マニュアル送付"
            app:bootstrapBrand="warning"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/button_wakaranai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="これはわからない"
            app:bootstrapBrand="warning"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/button_maemoittayo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="この前も言った"
            app:bootstrapBrand="warning"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>


</RelativeLayout>